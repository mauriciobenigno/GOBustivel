<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TelasTeste.TelaCadastroPosto">

    <TextView
            android:text="TELA CADASTRO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
    />
    <EditText
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nome do Posto"
            android:ems="10"
            android:id="@+id/campoNome" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.467" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/campoRzSocial"/>
    <EditText
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Cidade"
            android:ems="10"
            android:id="@+id/campoCidade" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/campoNome" app:layout_constraintHorizontal_bias="0.483"/>
    <EditText
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Bairro"
            android:ems="10"
            android:id="@+id/campoBairro" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/campoCidade" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.483"/>
    <EditText
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/campoRzSocial"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="64dp"/>
    <TextView
            android:text="PREÃ‡O GERAL DE TESTE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/campoBairro" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/campoDVmin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:text="V. Min." android:inputType="numberDecimal"/>
    <EditText
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/campoDVmed"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:text="V. Med." app:layout_constraintStart_toEndOf="@+id/campoDVmin"
            android:layout_marginStart="12dp"/>
    <EditText
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/campoDVmax"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:text="V. Max"
            app:layout_constraintStart_toEndOf="@+id/campoDVmed" android:layout_marginStart="16dp"
            android:inputType="numberDecimal"/>
    <EditText
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/campoDSVusr"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:text="V. Usr"
            app:layout_constraintStart_toEndOf="@+id/campoDVmax" android:layout_marginStart="12dp"
            android:inputType="numberDecimal"/>
    <Button
            android:text="Cadastrar Posto"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:id="@+id/btCadastrarPosto" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="184dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>